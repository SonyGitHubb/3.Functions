    "def make_sentence(*words, uppercase=False):\n",
    "    if uppercase == True:\n",
    "        return ' '.join(words).upper()\n",
    "    else:\n",
    "        return ' '.join(words)\n",
    "\n",
    "print(make_sentence(\"Hello\", \"world!\", uppercase=True))"
